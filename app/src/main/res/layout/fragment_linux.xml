<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Main$PlaceholderFragment">

	<Button
		android:id="@+id/buttonLaunchShell"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/checkBoxInstalled"
		android:layout_marginTop="25dp"
		android:text="@string/buttonLaunchShell"/>

	<Space
		android:id="@+id/space"
		android:layout_width="20px"
		android:layout_height="20px"
		android:layout_alignParentBottom="true"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<Button
		android:id="@+id/buttonInstall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/buttonUninstall"
		android:layout_alignParentStart="true"
		android:layout_toStartOf="@+id/space"
		android:text="@string/buttonInstall"/>

	<Button
		android:id="@+id/buttonUninstall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:layout_alignStart="@+id/space"
		android:text="@string/buttonUninstall"/>

	<Button
		android:id="@+id/buttonMount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/buttonInstall"
		android:layout_toStartOf="@+id/space"
		android:text="@string/buttonMount"/>

	<Button
		android:id="@+id/buttonUnmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/buttonUninstall"
		android:layout_toEndOf="@+id/buttonMount"
		android:layout_toStartOf="@+id/space"
		android:text="@string/buttonUnmount"/>

	<CheckBox
		android:id="@+id/checkBoxInstalled"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/buttonMount"
		android:layout_marginTop="24dp"
		android:layout_toStartOf="@+id/space"
		android:enabled="false"
		android:text="@string/checkBoxInstalled"/>

	<CheckBox
		android:id="@+id/checkBoxMounted"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/checkBoxInstalled"
		android:layout_toEndOf="@+id/space"
		android:enabled="false"
		android:text="@string/checkBoxMounted"/>

</RelativeLayout>
