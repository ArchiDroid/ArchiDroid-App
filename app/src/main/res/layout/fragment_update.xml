<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textRemoteBuildDate"
		android:text="@string/textBuildDate"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textRemoteVersion"
		android:layout_alignParentStart="true"
		android:layout_marginTop="5dp"/>

	<Spinner
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/spinnerDownloadModes"
		android:layout_toStartOf="@+id/space"
		android:layout_alignParentStart="true"
		android:layout_alignTop="@+id/buttonDownload"
		android:layout_alignBottom="@+id/buttonDownload"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/buttonDownload"
		android:id="@+id/buttonDownload"
		android:layout_toEndOf="@+id/space"
		android:layout_alignParentEnd="true"
		android:enabled="false"
		android:layout_below="@+id/buttonUpdate"
		android:layout_marginTop="25dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textRemoteVariant"
		android:text="@string/textVersionType"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textRemoteBuildDate"
		android:layout_alignParentStart="true"
		android:layout_marginTop="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textCurrentRom"
		android:text="@string/textRom"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textCurrentVariant"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="5dp"
		android:layout_alignStart="@+id/textCurrentVariant"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textRemoteDevice"
		android:text="@string/textDevice"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textRemoteRom"
		android:layout_alignParentStart="true"
		android:layout_marginTop="5dp"/>

	<Space
		android:layout_width="20px"
		android:layout_height="20px"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/space"
		android:layout_alignParentBottom="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textCurrentVariant"
		android:text="@string/textVersionType"
		android:layout_toStartOf="@+id/space"
		android:layout_toEndOf="@+id/space"
		android:layout_below="@+id/textCurrentBuildDate"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/textCurrent"
		android:id="@+id/textCurrent"
		android:layout_toStartOf="@+id/space"
		android:layout_alignTop="@+id/textRemote"
		android:layout_alignParentEnd="true"
		android:layout_toEndOf="@+id/space"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textCurrentBuildDate"
		android:text="@string/textBuildDate"
		android:layout_toStartOf="@+id/space"
		android:layout_toEndOf="@+id/space"
		android:layout_below="@+id/textCurrentVersion"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textCurrentDevice"
		android:text="@string/textDevice"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textCurrentRom"
		android:layout_alignParentEnd="true"
		android:layout_alignStart="@+id/textCurrentRom"
		android:layout_marginTop="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textRemoteVersion"
		android:layout_below="@+id/textRemote"
		android:layout_alignParentStart="true"
		android:layout_marginTop="10dp"
		android:text="@string/textVersion"
		android:layout_toStartOf="@+id/space"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textCurrentVersion"
		android:text="@string/textVersion"
		android:layout_toEndOf="@+id/textRemote"
		android:layout_below="@+id/textCurrent"
		android:layout_marginTop="10dp"
		android:layout_alignParentEnd="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textRemoteRom"
		android:text="@string/textRom"
		android:layout_toStartOf="@+id/space"
		android:layout_below="@+id/textRemoteVariant"
		android:layout_alignParentStart="true"
		android:layout_marginTop="5dp"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/buttonFetch"
		android:id="@+id/buttonUpdate"
		android:layout_toEndOf="@+id/space"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/textRemote"
		android:id="@+id/textRemote"
		android:layout_toStartOf="@+id/textCurrent"
		android:layout_marginTop="25dp"
		android:layout_below="@+id/spinnerDownloadModes"
		android:layout_alignParentStart="true"/>

	<Spinner
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/spinnerBranches"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_toStartOf="@+id/space"
		android:layout_alignBottom="@+id/buttonUpdate"/>

</RelativeLayout>
